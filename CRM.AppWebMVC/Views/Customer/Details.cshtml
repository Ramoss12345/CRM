@model CRM.DTOs.CustomerDTOs.GetIdResultCustomerDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<h4>Detalle</h4>
<hr/>
<form asp-action="Details">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" type="hidden"/>
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="control-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                 <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="control-control"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            </div>
            <div class="row">
             <div class="col-12">
            <div class="form-group">
                 <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="control-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            </div>
        </div>
        <br/>
        <div class="roe-cols-6">
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary"/>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </div>
</form>


  @section Scripts {
      @{
          await Html.RenderPartialAsync("_ValidationScriptsPatrial");
      }
  }
