@model CRM.DTOs.CustomerDTOs.GetIdResultCustomerDTO

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>
<h3>¿Estas seguro de que deseas eliminar el cliente?</h3>
<div>
    <h4>Cliente</h4>
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="control-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <textarea asp-for="Address" class="control-control"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
        </div>
        <br/>
        <form asp-action="Delete">
            <div class="roe-cols-6">
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary"/>
